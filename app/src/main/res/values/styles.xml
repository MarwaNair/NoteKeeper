<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextStyle">@style/RedGreenEditText</item>
    </style>
    
    <style name="RedGreenEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textColorHint">@android:color/holo_red_dark</item>
    </style>


    <style name="NoteTitle" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/PluralshightPlum</item>
    </style>

    <style name="BrandedText" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/pluralsightOrange</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BrandedText.CourseName" >
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ModuleName" parent="BrandedText" >
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AddFAB" parent="@style/Widget.Design.FloatingActionButton">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="srcCompat">@drawable/ic_baseline_add_24</item>
    </style>


 
</resources>
